<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EsportPlayerMeniger.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EsportPlayerMeniger.Views.TournamentView"
             x:DataType="vm:TournamentViewModel">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*">
        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Turnieje" FontSize="24" FontWeight="Bold" Margin="10"/>

        <!-- Tournaments List -->
        <Border Grid.Row="1" Grid.Column="0" Margin="10" Padding="10" Background="LightGray">
            <StackPanel>
                <TextBlock Text="Dostępne Turnieje" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Tournaments}" SelectedItem="{Binding SelectedTournament}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding EntryFee, StringFormat='Wpisowe: {0:C}'}"/>
                                <TextBlock Text="{Binding PrizePool, StringFormat='Pula nagród: {0:C}'}"/>
                                <TextBlock Text="{Binding MinSkillRequired, StringFormat='Min. skill: {0}'}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Players List -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10" Padding="10" Background="LightBlue">
            <StackPanel>
                <TextBlock Text="Wybierz Gracza" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Players}" SelectedItem="{Binding SelectedPlayer}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Nickname}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SkillLevel, StringFormat='Skill: {0}'}"/>
                                <TextBlock Text="{Binding Money, StringFormat='Pieniądze: {0:C}'}"/>
                                <TextBlock Text="{Binding FatigueLevel, StringFormat='Zmęczenie: {0}'}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Dołącz do Turnieju" 
                    Command="{Binding JoinTournamentCommand}"
                    IsEnabled="{Binding CanJoinTournament}"
                    Padding="20,10"
                    Margin="0,0,10,0"/>
            <TextBlock Text="{Binding TournamentResult}" 
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="Green"/>
        </StackPanel>
    </Grid>
</UserControl>