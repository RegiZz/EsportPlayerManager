<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EsportPlayerMeniger.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EsportPlayerMeniger.Views.TrainingView"
             x:DataType="vm:TrainingViewModel">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*,*">
        <!-- Header -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Treningi" FontSize="24" FontWeight="Bold" Margin="10"/>

        <!-- Training List -->
        <Border Grid.Row="1" Grid.Column="0" Margin="10" Padding="10" Background="LightYellow">
            <StackPanel>
                <TextBlock Text="Dostępne Treningi" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Trainings}" SelectedItem="{Binding SelectedTraining}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Type}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SkillIncrease, StringFormat='Wzrost skill: +{0}'}"/>
                                <TextBlock Text="{Binding FatigueIncrease, StringFormat='Zmęczenie: +{0}'}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Players List -->
        <Border Grid.Row="1" Grid.Column="1" Margin="10" Padding="10" Background="LightGreen">
            <StackPanel>
                <TextBlock Text="Wybierz Gracza" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox ItemsSource="{Binding Players}" SelectedItem="{Binding SelectedPlayer}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding Nickname}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding SkillLevel, StringFormat='Skill: {0}'}"/>
                                <TextBlock Text="{Binding FatigueLevel, StringFormat='Zmęczenie: {0}'}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="{Binding TrainingMessage}" 
                       HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <Button Content="Rozpocznij Trening" 
                    Command="{Binding TrainPlayerCommand}"
                    IsEnabled="{Binding CanTrain}"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</UserControl>